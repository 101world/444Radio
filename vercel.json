{
  "buildCommand": "next build",
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/daily-play-bonus",
      "schedule": "0 0 * * *"
    }
  ]
}
